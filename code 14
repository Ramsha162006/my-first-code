#include<iostream>
using namespace std;
void print5(int n)
{
int space = 2*(n-1);
  //number
for(int i=1;i<=n;i++)
{
for( int j=1;j<=i;j++)
{
cout<<j;
}
//space
for(int j=1;j< space;j++)
{
cout<<" ";
}
//number
for(int j=i;j>=1;j--)
{
cout<<j;
}
  cout<<endl;
  space-=2;
}
}
int main()
{
  int t;
cin<<t;
print5(t);
}
